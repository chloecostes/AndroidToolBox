<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformationActivity">

    <TextView
        android:id="@+id/titreInfo"
        android:layout_width="359dp"
        android:layout_height="36dp"
        android:text="@string/InfoTitle"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06"
        tools:text="@string/InfoTitle" />

    <ImageButton
        android:id="@+id/pictureButton"
        android:layout_width="106dp"
        android:layout_height="88dp"
        android:layout_marginTop="32dp"
        android:background="@android:drawable/ic_menu_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titreInfo" />

    <TextView
        android:id="@+id/InfoPosition"
        android:layout_width="201dp"
        android:layout_height="88dp"
        android:layout_marginTop="40dp"
        android:text="@string/InfoPosition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.923"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titreInfo"
        tools:text="@string/InfoPosition" />

    <ListView
        android:id="@+id/listPerson"
        android:layout_width="409dp"
        android:layout_height="521dp"
        android:layout_marginTop="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />




</androidx.constraintlayout.widget.ConstraintLayout>